<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Blog Platform</title>
  <link rel="stylesheet" href="/stylesheets/style2.css">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar">
    <div class="container nav-container">
      <a class="logo">MyBlog</a>
      <ul class="nav-links">
        <li><a href="/blogs">Home</a></li>
        <li><a href="/">About</a></li>
        <li><a href="/blogs/new" class="btn-login">Create Blog</a></li>
        <li><a href="/signuppage" class="btn-login">Login</a></li>
      </ul>
    </div>
  </nav>

  <!-- Hero Section -->
  <header class="hero">
    <div class="hero-text">
      <h2>Welcome to MyBlog</h2>
      <p>Read and share amazing stories with the world.</p>
    </div>
  </header>

  <!-- Blog List -->
  <main class="container">
    <div class="blog-list">
      <%if(blogs.length > 0){%>
        <h2 class="section-title">Latest Blogs</h2>
        <% blogs.forEach(blog => { %>
          <div class="blog-card">
            <h3><a href="/blogs/<%= blog._id %>"><%= blog.title %></a></h3>
            <p class="blog-meta">By <%= blog.author %> | <%= blog.date.toDateString() %></p>
            <p class="blog-snippet"><%= blog.content.substring(0, 150) %>...</p>
            <a href="/blogs/<%= blog._id %>" class="read-more">Read More</a>
          </div>
        <% }) %>
      <% } else{ %>
        <h2 class="section-title">No Blogs Available</h2>
      <% } %>
    </div>
  </main>

  <!-- Footer -->
  <footer class="footer">
    <p>&copy; <%= new Date().getFullYear() %> MyBlog. All rights reserved.</p>
  </footer>
</body>
</html>
